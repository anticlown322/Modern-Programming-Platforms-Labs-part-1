<UserControl x:Class="DirectoryScanner.UI.MVVM.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:DirectoryScanner.UI.MVVM.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:AboutViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="650" 
             d:DesignWidth="1130">
    <StackPanel>
        <!--Title-->
        <TextBlock 
            HorizontalAlignment="Center"
            FontSize="40"
            FontWeight="Bold"
            Foreground="White" 
            Text="Brief information about the application"/>

        <!--About text-->
        <TextBlock
            Margin="20"
            FontSize="22"
            Foreground="White"
            TextWrapping="WrapWithOverflow">
                This is a simple application for scanning specified directory and
                show how much space files consume. It is one of my laboratory works.
                Source code and (not sure) description is available at the   
                <Hyperlink Command="{Binding GithubPageCommand}">github page</Hyperlink>  
                of this project.
                <LineBreak/>
                <LineBreak/>
                Links to my profiles:
        </TextBlock>

        <!--Profiles links-->
        <StackPanel Orientation="Horizontal"
                    Margin="20 0 20 10">

            <!--GitHub profile-->
            <Border Height="150"
                    Width="150"
                    Margin="10 0 10 0"
                    CornerRadius="10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="{StaticResource ColorDarkGray}"  Offset="0.0"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Clip>
                    <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0, 0, 150, 150"/>
                </Border.Clip>
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{Binding GithubPageCommand}"/>
                </Border.InputBindings>

                <Grid>
                    <TextBlock Margin="10"
                               FontSize="24"
                               FontWeight="Bold"
                               TextWrapping="WrapWithOverflow"
                               Foreground="White" 
                               Text="GitHub Profile"/>

                    <Image Height="150"
                           Source="{StaticResource Github}" 
                           Margin="50,29,-56,-29" 
                           RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-35"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Grid>
            </Border>

            <!--Linkedin profile-->
            <Border Height="150"
                    Width="150"
                    Margin="10 0 10 0"
                    CornerRadius="10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="{StaticResource ColorNavyBlue}"  Offset="0.0"/>
                        <GradientStop Color="{StaticResource ColorDeepBlue}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Clip>
                    <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0, 0, 150, 150"/>
                </Border.Clip>
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{Binding LinkedinCommand}"/>
                </Border.InputBindings>

                <Grid>
                    <TextBlock Margin="10"
                               FontSize="24"
                               FontWeight="Bold"
                               TextWrapping="WrapWithOverflow"
                               Foreground="White" 
                               Text="LinkedIn Profile"/>
                    
                    <Image Height="120"
                           Width="120"
                           Source="{StaticResource Linkedin}" 
                           RenderTransformOrigin="0.5,0.5" 
                           Margin="60,58,-30,-28">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-35"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Grid>
            </Border>
        </StackPanel>
    </StackPanel>
</UserControl>